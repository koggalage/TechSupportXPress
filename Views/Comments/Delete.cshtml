@model TechSupportXPress.Models.Comment

@{
    ViewData["Title"] = "Delete";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Comments
    </a>
</div>

<div class="card rounded-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <h6 class="mb-0">Delete Ticket Comment</h6>
        </div>
        @* <h3>Are you sure you want to delete this?</h3> *@
        <hr />
        <div class="row">
            <table class="table table-bordered table-responsive table-hover table-responsive-lg">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Description)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.Ticket)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Ticket.Id)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedOn)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.CreatedOn)
                    </td>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.CreatedBy.FullName)
                    </td>
                </tr>
            </table>
        </div>

    </div>
</div>

<div class="row p-3">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger float-end"><i class="fadeIn animated bx bx-save"></i> Delete</button>
    </form>
</div>

@model TechSupportXPress.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h5 class="mb-0"><i class="bi bi-person-badge-fill me-2"></i> My Profile</h5>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-person-fill text-secondary me-2 fs-5"></i>
                        <strong class="me-2">Full Name:</strong> @Model.FullName
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-person-circle text-secondary me-2 fs-5"></i>
                        <strong class="me-2">Username:</strong> @Model.UserName
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-envelope-fill text-secondary me-2 fs-5"></i>
                        <strong class="me-2">Email:</strong> @Model.Email
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-telephone-fill text-secondary me-2 fs-5"></i>
                        <strong class="me-2">Phone:</strong> @Model.PhoneNumber
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-gender-ambiguous text-secondary me-2 fs-5"></i>
                        <strong class="me-2">Gender:</strong> @Model.Gender
                    </div>
                    <div class="d-flex align-items-start">
                        <i class="bi bi-shield-lock-fill text-secondary me-2 fs-5"></i>
                        <strong class="me-2">Roles:</strong>
                        <span>@string.Join(", ", Model.Roles)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

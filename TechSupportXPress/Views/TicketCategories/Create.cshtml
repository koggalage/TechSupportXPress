@model TechSupportXPress.Models.TicketCategory

@{
    ViewData["Title"] = "Create";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Categories
    </a>
</div>

<div class="card rounded-4 shadow-sm">
    <div class="card-body">
        <h4 class="mb-3 text-danger">
            <h4 class="mb-3 text-primary bi bi-plus-circle"><i class="bi bi-building-add"></i> Add New Ticket Category</h4>
        </h4>
        <hr />

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Code" class="form-label">Category Code</label>
                    <input asp-for="Code" class="form-control" placeholder="Enter category code" />
                    <span asp-validation-for="Code" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">Category Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter category name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bx bx-save"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

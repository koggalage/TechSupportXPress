@model TechSupportXPress.ViewModels.SystemCodeDetailViewModel

@{
    ViewData["Title"] = "System Code Details";
}

<div class="card rounded-4 shadow-sm">
    <div class="card-header bg-light d-flex justify-content-between align-items-center">
        <h6 class="mb-0">Search Filters</h6>
    </div>

    <div class="card-body pb-2">
        <form asp-action="Index" method="post" enctype="multipart/form-data">
            <div class="row g-3">
                <div class="col-md-3">
                    <label asp-for="Code" class="form-label small">Code</label>
                    <input asp-for="Code" class="form-control form-control-sm" />
                </div>

                <div class="col-md-3">
                    <label asp-for="Description" class="form-label small">Description</label>
                    <input asp-for="Description" class="form-control form-control-sm" />
                </div>

                <div class="col-md-3">
                    <label asp-for="CreatedById" class="form-label small">Created By</label>
                    <select asp-for="CreatedById" name="CreatedById" class="form-select form-select-sm single-select" asp-items="ViewBag.CreatedById">
                        <option value="">Select User</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label asp-for="SystemCodeId" class="form-label small">System Code</label>
                    <select asp-for="SystemCodeId" name="SystemCodeId" class="form-select form-select-sm single-select" asp-items="ViewBag.SystemCodeId">
                        <option value="">Select System Code</option>
                    </select>
                </div>

                <div class="col-md-3 align-self-end d-flex gap-2">
                    <button type="submit" class="btn btn-sm btn-success w-100">
                        <i class="bx bx-search-alt"></i> Filter
                    </button>
                    <a asp-action="Index" class="btn btn-sm btn-outline-secondary w-100">
                        <i class="bx bx-reset"></i> Reset
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="card rounded-4">
    <div class="card-body">
      @*   <p>
            <a class="btn btn-primary" asp-action="Create">Add New System Code Detail</a>
        </p> *@
        <div class="table-responsive">
            <table id="example" class="table table-striped table-bordered" style="width:100%">

                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Code)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderNo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SystemCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedById)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        @* <th>View</th> *@
                       @*  <th>Edit</th>
                        <th>Delete</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SystemCodeDetails)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Code)

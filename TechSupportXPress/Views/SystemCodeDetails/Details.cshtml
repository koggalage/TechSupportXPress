@model TechSupportXPress.Models.SystemCodeDetail

@{
    ViewData["Title"] = "System Code Details";
}

<h1>Update System Code Details</h1>

<div class="card rounded-12">
    <div class="card-body">
        <table class="table table-bordered table-responsive table-hover table-responsive-lg">
            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Code)
                </td>
            </tr>

            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </td>
            </tr>

            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.OrderNo)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.OrderNo)
                </td>
            </tr>

            <tr>
                <th class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SystemCode)
                </th>
                <td class="col-sm-10">
                    @Html.DisplayFor(model => model.SystemCode.Id)
                </td>
            </tr>
        </table>
    </div>
</div>
<div class="row p-3">
    <div class="form-group">
        <a class="btn btn-primary float-end" asp-action="Edit" asp-route-id="@Model?.Id"> <i class="fadeIn animated bx bx-save"></i> Update System Code Details </a>
        <a class="btn btn-warning float-start" asp-action="Index"><i class="fadeIn animated bx bx-arrow-back"></i> Back to List</a>
    </div>
</div>
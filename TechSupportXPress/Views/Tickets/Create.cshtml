@model TechSupportXPress.ViewModels.TicketCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Tickets
    </a>
</div>

<div class="card rounded-4 shadow-sm">
    <div class="card-body">
        <h4 class="mb-3 text-danger">
            <h4 class="mb-3 text-primary bi bi-plus-circle"><i class="bi bi-building-add"></i> Add New Ticket</h4>
        </h4>
        <hr />

        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control" maxlength="200" placeholder="Enter ticket title..." />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" maxlength="1000" rows="4" placeholder="Enter description..."></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PriorityId" class="form-label"></label>
                    <select asp-for="PriorityId" class="form-select" asp-items="ViewBag.PriorityId">
                        <option value="">-- Select Priority --</option>
                    </select>
                    <span asp-validation-for="PriorityId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select get-subcategories" asp-items="ViewBag.CategoryId">
                        <option value="">-- Select Category (optional) --</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label asp-for="SubCategoryId" class="form-label"></label>
                    <select asp-for="SubCategoryId" class="form-select"></select>
                    <span asp-validation-for="SubCategoryId" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Attachment" class="form-label">Attachment</label>
                    <input asp-for="Attachment" type="file" class="form-control" />
                </div>
            </div>

            <div class="text-end mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bx bx-save"></i> Create
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
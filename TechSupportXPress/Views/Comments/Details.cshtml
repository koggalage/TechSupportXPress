@model TechSupportXPress.Models.Comment

@{
    ViewData["Title"] = "Details";
}

<div class="mb-3">
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to Comments
    </a>
</div>

<div class="card rounded-4">
    <div class="card-body">
        <h4 class="mb-3 text-info"><i class="bi bi-file-earmark-text"></i> Comment Details</h4>
        <hr />

        <table class="table table-bordered table-hover">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <td>@Html.DisplayFor(model => model.Description)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Ticket)</th>
                <td>@Html.DisplayFor(model => model.Ticket.Title)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
                <td>@Html.DisplayFor(model => model.CreatedOn)</td>
            </tr>
            <tr>
                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                <td>@Html.DisplayFor(model => model.CreatedBy.FullName)</td>
            </tr>
        </table>
    </div>
</div>
